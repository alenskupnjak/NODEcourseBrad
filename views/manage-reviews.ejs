<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta http-equiv="X-UA-Compatible" content="ie=edge" />
	<script src="https://kit.fontawesome.com/3da1a747b2.js"></script>
	<link rel="stylesheet" href="/css/bootstrap.css" />
	<link rel="stylesheet" href="/css/style.css" />
	<script src="https://api.mapbox.com/mapbox-gl-js/v1.2.0/mapbox-gl.js"></script>
	<link href="https://api.mapbox.com/mapbox-gl-js/v1.2.0/mapbox-gl.css" rel="stylesheet" />
	<title>Manage rewiews</title>
</head>

<body>
	<!-- Navbar -->
	<%- include('./insertview/navigation.ejs')%>


	<section class="container mt-5">
		<div class="row">
			<div class="col-md-8 m-auto">
				<div class="card bg-white py-2 px-4">
					<div class="card-body">
						<h1 class="mb-4">Manage Reviews</h1>
						<table class="table table-striped" id="tabela">

							<thead>
								<tr>
									<th scope="col">Bootcamp</th>
									<th scope="col">Rating</th>
									<th scope="col"></th>
								</tr>
							</thead>
							<!-- _id: 5f186557e976db0ed029b6d5,
							title: 'Great bootcamp',
							text: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec viverra feugiat mauris id viverra. ',
							rating: 7.99,
							bootcamp: [Object],
							user: [Object],
							createdAt: 2020-07-22T16:12:07.937Z, -->

							<tbody>
								<% for (let data of reviews) {%>
								<tr id="<%= data._id %>">
									<td><%= data.title%></td>
									<td><%= data.rating%></td>
									<td>
										<a href="add-review.html" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i></a>

										<a href="/api/v1/reviews/<%= data._id %>" class="btn btn-danger" class="brisi"
											id="<%= data._id %>"><i class="fas fa-times"></i></a>

										<!-- <button class="btn btn-danger">
											<i class="fas fa-times"></i><a href="add-review.html"></a>
										</button> -->
									</td>
								</tr>
								<% } %>
							</tbody>

						</table>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script>


		document.getElementById('tabela').addEventListener('click', e => {
			e.preventDefault()
			console.log(e);
			const zapis = e.path.map(data => {
				return data
			})


			let id;
			zapis.find(data => {
				if (data.tagName === 'TR') {
					console.log('xxx', data.getAttribute("id"));
					id = data.getAttribute("id")
				}
			})

			deleteData(id)
			refreshPage()
			// location.refreshPage()
			// window.location.reload(true)
			// location.assign('/api/v1/reviews')
		})


		const deleteData = async (id) => {
			try {
				const res = await fetch(`<%= port %>/api/v1/reviews/${id}`, {
					method: 'DELETE',
				});
				console.log('Delete JE uspio');
			} catch (error) {
				console.log(error);
			}
		};

		const refreshPage = async (id) => {
			try {
				const res = await fetch(`<%= port %>/api/v1/reviews`, {
					method: 'GET',
				});
				console.log('REFRESG JE uspio');
				window.location.reload(true)
			} catch (error) {
				console.log(error);
			}
		};

	</script>


	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
		integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
		crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
		integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
		crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
		integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
		crossorigin="anonymous"></script>
</body>

</html>